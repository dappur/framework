{% macro configBoolean(name, description, value) %}
	    <div class="col-md-6 form-group{% if has_error(name) %} has-error{% endif %}">
			<label for="{{ name }}">{{ description }} - ({{name}})</label>
		    <select name="{{ name }}" id="{{ name }}" class="form-control" required="required">
		    	<option value="1" {% if value %}selected{% endif %}>True</option>
		    	<option value="0" {% if not value %}selected{% endif %}>False</option>
		    </select>
		    <span id="{{ id }}-help-block" class="help-block">{{ error(name) }}</span>
		</div>
{% endmacro %}

{% macro configHtml(name, description, value) %}
		<div class="col-md-6 form-group{% if has_error(name) %} has-error{% endif %}">
				<label for="{{ name }}">{{ description }} - ({{name}})</label>
				<div class="row">
					<div class="col-md-6">
						<button type="button" class="btn btn-info dappur-html-preview form-control" data-html="{{name}}">Preview</button>
			    		<input type="hidden" name="{{ name }}" id="{{ name }}" value="{{ value }}">
					</div>
					<div class="col-md-6">
						<button type="button" class="btn btn-warning dappur-html-edit form-control" data-html="{{name}}">Edit HTML</button>
					</div>
				</div>
			    <span id="{{ id }}-help-block" class="help-block">{{ error(name) }}</span>
		</div>
{% endmacro %}