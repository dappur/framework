{% extends 'base.twig' %}

{% block title %}
	{{config['site-name']}}
{% endblock %}

{% block body %}
	<div class="container">
	    <div class="jumbotron">

	    	<div class="row text-center">
		    	<div class="col-md-6 col-md-offset-3">
		    		<img src="{{config['logo']}}" class="img-responsive" alt="{{ config['site-name'] }} Logo">
		    	</div>
		    </div>

	    	<div class="row text-center">
	    		<div class="col-md-12">
	    			<h1>Tsk tsk!</h1>
	    			<h3>405: Method Not Allowed</h3>
	    		</div>
	    	</div>

	    	<div class="row text-center">
		    	<div class="col-md-12">
		    		<p>
		    			This page only allows the following methods:
		    		</p>
		    		<p>
		    			<ul class="list-group col-md-4 col-md-offset-4">
		    				{% for item in methods %}
		    			    	<li class="list-group-item">{{item}}</li>
		    				{% endfor %}
		    			</ul>
		    		</p>
		    	</div>
		    </div>
	    </div>
	</div>
{% endblock %}
