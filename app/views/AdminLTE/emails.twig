{% extends 'base.twig' %}

{% block title %}{{config['site-name']}} || Emails{% endblock %}

{% block stylesheets %}
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 content-header">
                <h1 class="page-header">
                    Emails <small>Overview</small>
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i> Dashboard
                    </li>
                    <li class="active">
                        <i class="fa fa-envelope"></i> Emails
                    </li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="box box-info">
                    <div class="box-header">
                        <div class="pull-left box-title">Emails </div>
                        <div class="pull-right"><a href="{{ path_for('admin-email-new') }}" class="btn btn-xs btn-success"><span class="fa fa-fw fa-send"></span> New Email</a></div>
                        <div style="clear: both;"></div>
                    </div>

                    <div class="box-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="emails_table">
                            <thead>
                                <tr>
                                    <th>Sent At</th>
                                    <th>Subject</th>
                                    <th>Send To</th>
                                    <th>Status</th>
                                    <th>Message ID</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.1.1/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.1.1/js/responsive.bootstrap.min.js"></script>
<script type="text/javascript">
$(document).ready(function() {
    $('#emails_table').DataTable({
        "responsive": true,
        "stateSave": true,
        "order": [[ 0, "desc" ]],
        "processing": true,
        "serverSide": true,
        "ajax":{
                 "url": "/dashboard/email/datatables",
                 "dataType": "json",
                 "type": "GET"
               },
        "columns": [
            { "data": "created_at" },
            { "data": "subject" },
            { "data": "send_to" },
            { "data": "status" },
            { "data": "secure_id" },
            { 
                "data": "id",
                "orderable": false,
                "render": function ( data ) {
                    var result = "";
                    {% if auth.hasAccess('email.view') %}
                    var result = result + '<a href="/dashboard/email/details/'+data+'" class="btn btn-primary btn-xs">'+
                        '<span class="fa fa-fw fa-eye"></span>'+
                    '</a>';
                    {% endif %}
                    return result;
                }
            }
        ]

    });
});
</script>
{% endblock %}